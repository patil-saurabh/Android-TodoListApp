<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.saurabh.basictodoapp.EditTaskActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"

        android:id="@+id/etEditTask"
        android:layout_below="@+id/tVEditTaskTitle"
        android:layout_marginTop="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/edit_task_below"
        android:id="@+id/tVEditTaskTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnSaveTask"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignRight="@+id/btnSaveTask"
        android:layout_alignEnd="@+id/btnSaveTask" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_task"
        android:id="@+id/btnSaveTask"
        android:layout_below="@+id/etEditTask"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:onClick="onSaveClick" />
</RelativeLayout>
