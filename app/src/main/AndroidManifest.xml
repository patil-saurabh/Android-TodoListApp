<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.saurabh.basictodoapp" >

    <application
        android:allowBackup="true"
        android:name="com.activeandroid.app.Application"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditTaskActivity" >
        </activity>

        <!-- add the following metadata for version and database name -->
        <meta-data
        android:name="AA_DB_NAME"
        android:value="TodoTasks.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.codepath.saurabh.basictodoapp.TodoTask" />


    </application>
</manifest>
